<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityBrewing"
    android:layout_width="match_parent"
    android:layout_height="1900px"
    android:background="#D3BFBF">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:visibility="visible" />

    <com.animo.door.view.CustomTextViewALSLight
        android:id="@+id/customTextViewALSLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="740px"
        android:text="PRESS LOGO TO BREW RANDOM DRINK"
        android:textSize="22px"
        android:textStyle="bold" />
</RelativeLayout>
